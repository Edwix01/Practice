<?xml version="1.0"?>
<odoo>
    <record id="contratos_casa_action" model="ir.actions.act_window">
        <field name="name">Propiedades</field>
        <field name="res_model">contratos.casa</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new account
            </p><p>
                Hola mi rey, no hay registros
            </p>
        </field>
    </record>

    <record id='contratos_casas_view_list' model='ir.ui.view'>
        <field name='name'>contratos.casa.list</field>
        <field name='model'>contratos.casa</field>
        <field name='arch' type='xml'>
            <list string = 'Propiedades'>
                <field name='state'/>
                <field name='name'/>
                <field name='postcode'/>
                <field name='bedrooms'/>
                <field name='living_area'/>
                <field name='expected_price'/>
                <field name='selling_price'/>
                <field name='date_availability' string='Available From'/>
            </list>
        </field>
    </record>

    <record id='ofertas_casas_view_list' model='ir.ui.view'>
        <field name='name'>ofertas.casa.list</field>
        <field name='model'>ofertas.casa</field>
        <field name='arch' type='xml'>
            <list string = 'Propiedades'>
                <field name='price'/>
                <field name='state'/>
                <field name='partner_id'/>
            </list>
        </field>
    </record>



    <record id='contratos_casas_view_form' model='ir.ui.view'>
        <field name='name'>contratos.casa.form</field>
        <field name='model'>contratos.casa</field>
        <field name='arch' type='xml'>
            <form string = 'Propiedades'>
                <sheet>
                    <field name='active' invisible='1'/>
                    <widget name='web_ribbon' title='Archived' bg_color='text-bg-danger' invisible='active'/>
                        <div class='oe_tittle'>
                            <h1 class='mb32'>
                                <field name='name' placeholder='Nueva Casa' class='mb16'/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name='date_availability'/>
                            </group>
                            <group>
                                <field name='expected_price'/>
                            </group>
                            <group>
                                <field name='type_casa'/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name='expected_price'/>
                            </group>
                            <group>
                                <field name='selling_price'/>
                            </group>
                            <group>
                                <field name='best_offer'/>
                            </group>
                            <group>
                                <field name='state'/>
                            </group>  
                            <group>
                                <field name='caracteristicas' widget='many2many_tags'/>
                            </group>                                    
                        </group>
                        <notebook>
                            <page string='Descripcion' name='description'>
                                <group>
                                    <group>
                                    <field name='description'/>
                                    <field name='bedrooms'/>
                                    <field name='garages'/>
                                    <field name='facades'/>
                                    <field name='garden'/>
                                    <field name='postcode'/>
                                    <field name='garden_area'/>
                                    <field name='garden_orientation'/>
                                    </group>
                                </group>
                            </page>
                             <page string='Ofertas' name='offers'>
                                        <field name='ofertas'/>
                            </page>
                            <page string='Otra Informacion'>
                                <group>
                                    <group>
                                        <field name='buyer_id'/>
                                        <field name='salesperson_id'/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='contratos_casas_view_search' model='ir.ui.view'>
        <field name='name'>contratos.casa.search</field>
        <field name='model'>contratos.casa</field>
        <field name='arch' type='xml'>
            <search string='Busqueda de propiedades'> 
                <field name='name'/>
                <field name='postcode'/>
                <field name='expected_price'/>
                <field name='bedrooms'/>
                <field name='living_area'/>
                <field name='facades'/>
                <filter string='Available' name='available' domain="[('state','in',['new','offer_received'])]"/> 
                <filter string='Archieved' name='archieved' domain="[('active','=',False)]"/> 
                <group string='Group By'>
                    <filter string='Postcode' name='postcode' context="{'group_by': 'postcode'}"/>    
                </group>                         
            </search>
        </field>
    </record>

    <record id="tipos_casa_action" model="ir.actions.act_window">
        <field name="name">Tipos de Casas</field>
        <field name="res_model">tipos.casa</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new property
            </p><p>
                Hola mi rey, no hay tipos de propiedades
            </p>
        </field>
    </record>

    <record id='tipoos_casas_view_list' model='ir.ui.view'>
        <field name='name'>tipos.casa.list</field>
        <field name='model'>tipos.casa</field>
        <field name='arch' type='xml'>
            <list string = 'Tipos de Casas'>
                <field name='name'/>
            </list>
        </field>
    </record>

    <record id='tipoos_casas_view_form' model='ir.ui.view'>
        <field name='name'>tipos.casa.form</field>
        <field name='model'>tipos.casa</field>
        <field name='arch' type='xml'>
            <form string = 'Tipos de Casas'>
                <sheet>
                    <div class='oe_tittle'>
                        <h1 class='mb32'>
                            <field name='name' placeholder='Nuevo Tipo' class='mb16'/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="caracteristicas_casa_action" model="ir.actions.act_window">
        <field name="name">Caracteristicas de Casas</field>
        <field name="res_model">caracteristicas.casa</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new characteristics
            </p><p>
                Hola mi rey, no hay caracteristicas
            </p>
        </field>
    </record>

    <record id='caracteristicas_casas_view_list' model='ir.ui.view'>
        <field name='name'>caracteristicas.casa.list</field>
        <field name='model'>caracteristicas.casa</field>
        <field name='arch' type='xml'>
            <list string = 'Caracteristicas de Casas'>
                <field name='name'/>
            </list>
        </field>
    </record>

    <record id='Caracteristicas_casas_view_form' model='ir.ui.view'>
        <field name='name'>caracteristicas.casa.form</field>
        <field name='model'>caracteristicas.casa</field>
        <field name='arch' type='xml'>
            <form string = 'Caracteristica de Casa'>
                <sheet>
                    <div class='oe_tittle'>
                        <h1 class='mb32'>
                            <field name='name' placeholder='Nueva Caracteristica' class='mb16'/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


    <menuitem id='control_casas_root_menu' name = 'Contratos'>
        <menuitem id='control_casas_main_menu' name = 'Menu Principal'>
            <menuitem id='control_casas_menu_action' action='contratos_casa_action'>
            </menuitem>
        </menuitem>
        <menuitem id='tipos_casas_main_menu' name = 'Configuraciones'>
             <menuitem id='tipos_casas_menu_action' action='tipos_casa_action'>
            </menuitem>
             <menuitem id='caracteristicas_casa_menu_action' action='caracteristicas_casa_action'>
            </menuitem>
        </menuitem>
    </menuitem>
</odoo>